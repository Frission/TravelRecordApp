<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TravelRecordApp.PostDetailPage">
    <ContentPage.Content>
        <StackLayout Margin="30,0" Padding="0,30,0,0" Spacing="15">
            <Editor x:Name="ExperienceEntry" 
                   Placeholder="Travel Experience"
                   HeightRequest="200"
                 />
            <StackLayout Spacing="15" Orientation="Horizontal">
            <Button x:Name="UpdateButton" 
                    Text="Update"
                    Clicked="UpdateButton_Clicked"
                    HorizontalOptions="FillAndExpand"/>
            <Button x:Name="DeleteButton"
                    Text="Delete"
                    Clicked="DeleteButton_Clicked" 
                    HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>